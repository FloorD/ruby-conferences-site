%article#home
  %nav
    %ul
      %li#current.active
        %a(href="#") Current
      %li#tba
        %a(href="#") TBA
  %dl.current.events.active
    - data.current.each do |event|
      %dt= link_to event.name, event.url
      %dd #{event.dates} | #{event.location} | #{link_to "@#{event.twitter}", "http://twitter.com/#{event.twitter}"}
  %dl.tba.events
    - data.tba.each do |event|
      %dt= link_to event.name, event.url
      %dd #{event.dates} | #{event.location} | #{link_to "@#{event.twitter}", "http://twitter.com/#{event.twitter}"}
